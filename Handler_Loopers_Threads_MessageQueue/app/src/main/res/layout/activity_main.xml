<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start thread" />

    <Button
        android:id="@+id/btnStartHandlerThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Handler Thread" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Thread" />

    <Button
        android:id="@+id/btnStopHandlerThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Handler Thread" />

    <Button
        android:id="@+id/btnTaskOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Task to Thread" />

    <Button
        android:id="@+id/btnTaskTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Task to Handler Thread" />

</LinearLayout>