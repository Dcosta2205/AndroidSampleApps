<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:padding="15dp"
     />

    <TextView
        android:id="@+id/instHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="instagram"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/instHead"
        android:layout_marginTop="27dp"
        android:padding="5dp"
 />

    <TextView
        android:id="@+id/instaUsr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/instHead"
        android:layout_marginStart="20dp"

        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bio"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/instaUsr"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"

        android:textSize="18dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:padding="20dp"

        />

    <TextView
        android:id="@+id/foll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bio"
        android:layout_margin="20dp"

        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/following"
        android:layout_width="144dp"
        android:layout_height="31dp"
        android:layout_below="@id/foll"
        android:layout_margin="20dp"

        android:textAllCaps="false"
        android:textSize="16dp" />

    <Button
        android:layout_width="144dp"
        android:layout_height="31dp"
        android:layout_below="@id/foll"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        android:textSize="16dp" />

    <View
        android:id="@+id/halfLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:layout_below="@id/halfLine"
        android:layout_marginTop="-40dp"


        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/halfLine"
        android:layout_marginStart="70dp"
        android:layout_marginTop="-40dp"
        android:padding="10dp"
      />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/halfLine"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="70dp"
        android:padding="10dp"/>
<!--        android:src="@drawable/intsa_tags"-->

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/halfLine"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:weightSum="2"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/bill_gates" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/bill_gates" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/bill_gates" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_marginStart="2dp"
                android:src="@drawable/bill_gates" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>